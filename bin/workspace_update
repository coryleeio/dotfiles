#!/bin/bash
RED='\033[0;31m'
NC='\033[0m' # No Color
mkdir -p $HOME/Workspace
cd $HOME/Workspace
for D in *; do
    if [ -d "${D}" ]; then
 	printf ""
        printf "${NC} ===== ${D} ====="   # your processing here
        pushd ${D}
	
    git status | grep 'working tree clean'
    if [ ! $? -eq 0 ]
    then
        printf "${RED}HAS CHANGES\n"
        printf "run 'workspace_status' first\n"
        printf "\n"
        git status
        exit 1
    fi
	git fetch
	git checkout master
	git pull
 	popd
    fi
done
