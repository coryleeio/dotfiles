#! /usr/bin/env bash

set -x

MONITORS=$(xrandr | grep ' connected' | cut -f 1 -d ' ' | sort | paste -sd " " -);
if [[ "$MONITORS" == "DP-2-2 eDP-1" ]]; then
    notify-send "setting up 2 displays - Work" -i preferences-desktop-display
    xrandr --output DP-2-2 --off && xrandr --output eDP-1 --auto --output DP-2-2 --right-of eDP-1 --primary --auto
elif [[ "$MONITORS" == "eDP-1" ]]; then
    xrandr --output eDP-1 --auto --primary --output DP-2-2 --off
    notify-send "setting up 1 display" -i preferences-desktop-display
fi
